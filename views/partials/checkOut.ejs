<div class="untree_co-section">
  <div class="container">
    <form action="/checkout" method="post">
      <div class="row mb-5">
        <div class="col-md-12">
          <div class="border p-4 rounded" role="alert">
            Returning customer? <a href="/login">Click here</a> to login
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-5 mb-md-0">
          <h2 class="h3 mb-3 text-black">Billing Details</h2>
          <div class="auto p-3 p-lg-5 border bg-white">
            <div class="form-group">
              <label for="country" class="text-black"
                >Country <span class="text-danger">*</span></label
              >
              <select id="country" class="form-control" name="country">
                <option value="" disabled selected>Select a country</option>
                <option value="Bangladesh">Bangladesh</option>
                <option value="Algeria">Algeria</option>
                <option value="Afghanistan">Afghanistan</option>
                <option value="Ghana">Ghana</option>
                <option value="Nigeria">Nigeria</option>
                <option value="Bahrain">Bahrain</option>
                <option value="Colombia">Colombia</option>
                <option value="Dominican">Dominican Republic</option>
              </select>
            </div>

            <div class="form-group row">
              <div class="col-md-6">
                <label for="fname" class="text-black"
                  >First Name <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="fname"
                  name="fname"
                  value="<%= typeof fname != 'undefined'? fname : '' %>"
                />
              </div>
              <div class="col-md-6">
                <label for="lname" class="text-black"
                  >Last Name <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="lname"
                  name="lname"
                  value="<%= typeof lname !== 'undefined'? lname : '' %>"
                />
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-12">
                <label for="paymentMethod" class="text-black"
                  >Payment Method
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="paymentMethod"
                  name="paymentMethod"
                  value="<%= typeof paymentMethod !== 'undefined'? paymentMethod : '' %>"
                />
              </div>
            </div>

            <div class="form-group row">
              <div class="col-md-12">
                <label for="address" class="text-black"
                  >Address <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  name="address"
                  placeholder="Street address"
                  value="<%= typeof address !== 'undefined'? address : '' %>"
                />
              </div>
            </div>

            <div class="form-group mt-3">
              <input
                type="text"
                class="form-control"
                placeholder="Apartment, suite, unit etc. (optional)"
              />
            </div>

            <div class="form-group row">
              <div class="col-md-6">
                <label for="state_country" class="text-black"
                  >State / Country <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="state_country"
                  name="state_country"
                  value="<%= typeof state_country !== 'undefined'? state_country : '' %>"
                />
              </div>
              <div class="col-md-6">
                <label for="postal_zip" class="text-black"
                  >Posta / Zip <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="postal_zip"
                  name="postal_zip"
                  value="<%= typeof postal_zip !== 'undefined'? postal_zip : '' %>"
                />
              </div>
            </div>

            <div class="form-group row mb-5">
              <div class="col-md-6">
                <label for="email_address" class="text-black"
                  >Email Address <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="email_address"
                  name="email_address"
                  value="<%= typeof email_address !== 'undefined'? email_address : '' %>"
                />
              </div>
              <div class="col-md-6">
                <label for="phone" class="text-black"
                  >Phone <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="phone"
                  name="phone"
                  placeholder="Phone Number"
                  value="<%= typeof phone !== 'undefined'? phone : '' %>"
                />
              </div>
            </div>

            <div class="form-group">
              <label
                for="create_account"
                class="text-black"
                data-bs-toggle="collapse"
                href="#create_an_account"
                aria-expanded="false"
                aria-controls="create_an_account"
              >
                <input
                  type="checkbox"
                  value="1"
                  id="create_account"
                  name="createAccount"
                />
                Create an account?
              </label>

              <div class="collapse" id="create_an_account">
                <div class="py-2 mb-4">
                  <p class="mb-3">
                    Create an account by entering the information below. If you
                    are a returning customer please login at the top of the
                    page.
                  </p>
                  <div class="form-group">
                    <label for="account_password" class="text-black"
                      >Account Password</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      id="account_password"
                      name="account_password"
                      placeholder=""
                      value="<%= typeof account_password !== 'undefined'? account_password : '' %>"
                    />
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label
                for="ship_different_address"
                class="text-black"
                data-bs-toggle="collapse"
                href="#ship_different_address"
                aria-expanded="false"
                aria-controls="ship_different_address"
                ><input
                  type="checkbox"
                  name="ship_different_address"
                  value="1"
                  id="ship_different_address"
                />
                Ship To A Different Address?</label
              >
              <div class="collapse" id="ship_different_address">
                <div class="py-2">
                  <div class="form-group">
                    <label for="diff_country" class="text-black"
                      >Country <span class="text-danger">*</span></label
                    >
                    <select
                      id="country"
                      class="form-control"
                      name="diff_country"
                    >
                      <option value="" disabled selected>
                        Select a country
                      </option>
                      <option value="Bangladesh">Bangladesh</option>
                      <option value="Algeria">Algeria</option>
                      <option value="Afghanistan">Afghanistan</option>
                      <option value="Ghana">Ghana</option>
                      <option value="Nigeria">Nigeria</option>
                      <option value="Bahrain">Bahrain</option>
                      <option value="Colombia">Colombia</option>
                      <option value="Dominican">Dominican Republic</option>
                    </select>
                  </div>

                  <div class="form-group row">
                    <div class="col-md-6">
                      <label for="diff_fname" class="text-black"
                        >First Name <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="diff_fname"
                        name="diff_fname"
                        value="<%= typeof diff_fname !== 'undefined'? diff_fname : '' %>"
                      />
                    </div>
                    <div class="col-md-6">
                      <label for="diff_lname" class="text-black"
                        >Last Name <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="diff_lname"
                        name="diff_lname"
                        value="<%= typeof diff_lname !== 'undefined'? diff_lname : '' %>"
                      />
                    </div>
                  </div>

                  <div class="form-group row">
                    <div class="col-md-12">
                      <label for="diff_paymentMethod" class="text-black"
                        >Payment Method
                      </label>
                      <input
                        type="text"
                        class="form-control"
                        id="diff_paymentMethod"
                        name="diff_paymentMethod"
                        value="<%= typeof diff_paymentMethod !== 'undefined'? diff_paymentMethod : '' %>"
                      />
                    </div>
                  </div>

                  <div class="form-group row mb-3">
                    <div class="col-md-12">
                      <label for="diff_address" class="text-black"
                        >Address <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="diff_address"
                        name="diff_address"
                        placeholder="Street address"
                        value="<%= typeof diff_address !== 'undefined'? diff_address : '' %>"
                      />
                    </div>
                  </div>

                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Apartment, suite, unit etc. (optional)"
                    />
                  </div>

                  <div class="form-group row">
                    <div class="col-md-6">
                      <label for="diff_state_country" class="text-black"
                        >State / Country
                        <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="diff_state_country"
                        name="diff_state_country"
                        value="<%= typeof diff_state_country !== 'undefined'? diff_state_country : '' %>"
                      />
                    </div>
                    <div class="col-md-6">
                      <label for="diff_postal_zip" class="text-black"
                        >Posta / Zip <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="diff_postal_zip"
                        name="diff_postal_zip"
                        value="<%= typeof diff_postal_zip !== 'undefined'? diff_postal_zip : '' %>"
                      />
                    </div>
                  </div>

                  <div class="form-group row mb-5">
                    <div class="col-md-6">
                      <label for="diff_email_address" class="text-black"
                        >Email Address <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="diff_email_address"
                        name="diff_email_address"
                        value="<%= typeof diff_email_address !== 'undefined'? diff_email_address : '' %>"
                      />
                    </div>
                    <div class="col-md-6">
                      <label for="diff_phone" class="text-black"
                        >Phone <span class="text-danger">*</span></label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="diff_phone"
                        name="diff_phone"
                        placeholder="Phone Number"
                        value="<%= typeof diff_phone !== 'undefined'? diff_phone : '' %>"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="order_notes" class="text-black">Order Notes</label>
              <textarea
                name="order_notes"
                id="order_notes"
                cols="30"
                rows="5"
                class="form-control"
                placeholder="Write your notes here..."
                value="<%= typeof order_notes !== 'undefined'? order_notes : '' %>"
              ></textarea>
            </div>
          </div>
        </div>

        <!-- right side -->
        <div class="col-md-6">
          <div class="row mb-5">
            <div class="col-md-12">
              <h2 class="h3 mb-3 text-black">Coupon Code</h2>
              <div class="p-3 p-lg-5 border bg-white">
                <label for="code" class="text-black mb-3"
                  >Enter your coupon code if you have one</label
                >
                <div class="input-group w-75 couponcode-wrap">
                  <input
                    type="text"
                    class="form-control me-2"
                    id="code"
                    placeholder="Coupon Code"
                    aria-label="Coupon Code"
                    aria-describedby="button-addon2"
                  />
                  <div class="input-group-append">
                    <button class="btn btn-black btn-sm" id="button-addon2">
                      Apply
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row mb-5">
            <div class="col-md-12">
              <h2 class="h3 mb-3 text-black">Your Order</h2>
              <div class="p-3 p-lg-5 border bg-white">
                <table class="table site-block-order-table mb-5">
                  <thead>
                    <th>Product</th>
                    <th>Total</th>
                  </thead>
                  <tbody>
                    <% overallTotal = 0%> <% if(typeof cart === "undefined" ||
                    cart.length === 0){ %>
                    <td colspan="2">
                      <strong>Cart is empty🛒😔</strong>
                    </td>
                    <% } else {%> <% cart.forEach(item =>{ %> <% let sub =
                    parseFloat(item.total).toFixed(2)%> <%overallTotal+= +sub %>
                    <tr>
                      <td>
                        <%=item.name %>
                        <strong class="mx-2">x</strong> <%=item.quantity %>
                      </td>
                      <td>$<%=parseFloat(item.total).toFixed(2)%></td>
                    </tr>

                    <% }) %> <% } %>

                    <tr>
                      <td class="text-black font-weight-bold">
                        <strong>Cart Subtotal</strong>
                      </td>
                      <td class="text-black">
                        $<%= parseFloat(overallTotal).toFixed(2) %>
                      </td>
                    </tr>
                    <tr>
                      <td class="text-black font-weight-bold">
                        <strong>Order Total</strong>
                      </td>
                      <td class="text-black font-weight-bold">
                        <strong
                          >$<%= parseFloat(overallTotal).toFixed(2) %></strong
                        >
                      </td>
                    </tr>
                  </tbody>
                </table>

                <div class="border p-3 mb-3">
                  <h3 class="h6 mb-0">
                    <a
                      class="d-block"
                      data-bs-toggle="collapse"
                      href="#collapsebank"
                      aria-expanded="false"
                      aria-controls="collapsebank"
                      >Direct Bank Transfer</a
                    >
                  </h3>

                  <div class="collapse" id="collapsebank">
                    <div class="py-2">
                      <p class="mb-0">
                        Make your payment directly into our bank account. Please
                        use your Order ID as the payment reference. Your order
                        won’t be shipped until the funds have cleared in our
                        account.
                      </p>
                    </div>
                  </div>
                </div>

                <div class="border p-3 mb-3">
                  <h3 class="h6 mb-0">
                    <a
                      class="d-block"
                      data-bs-toggle="collapse"
                      href="#collapsecheque"
                      aria-expanded="false"
                      aria-controls="collapsecheque"
                      >Cheque Payment</a
                    >
                  </h3>

                  <div class="collapse" id="collapsecheque">
                    <div class="py-2">
                      <p class="mb-0">
                        Make your payment directly into our bank account. Please
                        use your Order ID as the payment reference. Your order
                        won’t be shipped until the funds have cleared in our
                        account.
                      </p>
                    </div>
                  </div>
                </div>

                <div class="border p-3 mb-5">
                  <h3 class="h6 mb-0">
                    <a
                      class="d-block"
                      data-bs-toggle="collapse"
                      href="#collapsepaypal"
                      aria-expanded="false"
                      aria-controls="collapsepaypal"
                      >Paypal</a
                    >
                  </h3>

                  <div class="collapse" id="collapsepaypal">
                    <div class="py-2">
                      <p class="mb-0">
                        Make your payment directly into our bank account. Please
                        use your Order ID as the payment reference. Your order
                        won’t be shipped until the funds have cleared in our
                        account.
                      </p>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <button
                    class="btn btn-black btn-lg py-3 btn-block"
                    type="submit"
                  >
                    Place Order
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
